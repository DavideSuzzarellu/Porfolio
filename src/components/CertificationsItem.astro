---
import type { Certification } from '../config/config';
import TechArticle from './TechArticle.astro';

type Props = {
    certification: Certification;
}

const { certification } = Astro.props;

---

<article class="mb-12 text-white flex flex-col justify-center">
    <h3 class="text-xl relative font-semibold text-orange-400">{certification.courseName}</h3>
    <h4 class="text-lg mb-1 font-semibold text-orange-200">{certification.company}</h4>
    <p class="text-sm mb-2 text-slate-300">{certification.year}</p>
    <p class="mb-3 text-sm text-pretty">{certification.description}</p>
    <ul class="flex flex-wrap items-start gap-4 mb-4 mt-2">
        {certification.technologies.map(tech => (
            <li>
                <TechArticle 
                    name={tech.name} 
                    icon={tech.icon} 
                />
            </li>
        ))}
    </ul>
</article>

