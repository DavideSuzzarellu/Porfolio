---
import type { Project } from '../config/config';
import { Image } from 'astro:assets';
import GithubIcon from '../components/icons/GithubIcon.astro'
import TechArticle from './TechArticle.astro';
import SocialButton from './SocialButton.astro';

const { project } = Astro.props;
---

<article class="mb-20 text-white flex flex-col justify-center gap-1">
    <aside class="h-auto relative">
        <div class="absolute flex items-center -left-10">
            <SocialButton url={project.url} logo="fa-brands fa-github" socialName="Github" color="white" hoverColor="orange-500" />    
        </div>
        <h3 class="text-xl relative font-semibold text-orange-400">{project.projectName}</h3>
    </aside>
    <p class="text-pretty text-slate-300 mb-2">{project.description}</p>
    <h4 class="text-orange-200">Tecnologias:</h4>
    <ul class="flex flex-wrap items-start gap-4 mb-4 mt-2">
        {project.technologies.map(tech => {
            return (
                <li>
                    <TechArticle 
                        name={tech.name} 
                        icon={tech.icon} 
                    />
                </li>
                );
          })}
    </ul>
    <Image class="max-h-[310px] mt-2 overflow-hidden w-fit mx-auto rounded-md shadow-white/10 object-contain" src={project.img} onblur='' loading="lazy" alt="Imagen Proyecto" width="600" height="300"/>
</article>