---
import type { Project } from '../config/config';
import { Image } from 'astro:assets';

type Props = {
  project: Project;
}

const { project } = Astro.props;
---

<article class="mb-4 text-white flex flex-col justify-center">
    <h3 class="text-slate-400">{project.projectName}</h3>
    <p class="text-pretty text-slate-300 mb-2">{project.description}</p>
    <h3>Tecnologias:</h3>
    <ul class="flex flex-col items-start gap-4 my-5">
        {project.technologies.map(tech => (
            <li class="px-4 py-1 shadow-inner shadow-slate-600 rounded-xl w-fit bg-slate-800 border border-gray-800">
                 <p class="font-semibold text-orange-300">{tech.name}:</p><p>{tech.descriptionTec}</span>
            </li>
        ))}
    </ul>
    <Image class="w-auto rounded shadow-2xl shadow-white/10 h-full object-contain" src={project.img} loading="lazy" alt="Imagen Proyecto" width="300" height="300"/>
</article>