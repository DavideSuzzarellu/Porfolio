---
import type { Project } from '../config/config';
import { Image } from 'astro:assets';

type Props = {
  project: Project;
}

const { project  } = Astro.props;
---

<article class="mb-20 mt-10 text-white flex flex-col justify-center">
    <h4 class="text-xl relative font-semibold text-orange-400">{project.projectName}</h4>
    <p class="text-pretty text-slate-300 mb-2">{project.description}</p>
    <h3 class="text-orange-200">Tecnologias:</h3>
    <ul class="flex flex-col items-start gap-4 mb-4 mt-2">
        {project.technologies.map(tech => (
            <li class="px-3 py-2 shadow-inner shadow-slate-600 rounded-xl w-fit bg-slate-800 border border-gray-800">
                 <p class="font-semibold text-orange-300">{tech.name}:</p><p class="text-sm">{tech.descriptionTec}</span>
            </li>
        ))}
    </ul>
    <Image class="h-auto w-auto rounded shadow-2xl shadow-white/10 object-cover" src={project.img} loading="lazy" alt="Imagen Proyecto" width="300" height="300"/>
</article>