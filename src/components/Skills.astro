---
import SkillsLogo from "./SkillsLogo.astro"
import AstroIcon from "./icons/AstroIcon.astro";
import Boostrap from "./icons/Boostrap.astro"
import CSS from "./icons/CSS.astro"
import HTML from "./icons/HTML.astro"
import Javascript from "./icons/Javascript.astro"
import Python from "./icons/Python.astro"
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import Typescript from "./icons/Typescript.astro"
---

<h2 class="mx-auto mb-6 relative items-center lg:ms-7 text-3xl font-bold text-orange-500 flex gap-2"><i class="fa-solid fa-gears fa-xs lg:absolute lg:top-4 lg:-left-14 text-center text-orange-500"></i>Soft Skills</h2>
<section class="flex gap-4 flex-wrap">
    <SkillsLogo logoName="Astro">
        <AstroIcon size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="Boostrap">
        <Boostrap size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="CSS">
        <CSS size="50"/>
    </SkillsLogo>
    <SkillsLogo  logoName="HTML">
        <HTML size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="Javascript">
        <Javascript size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="Python">
        <Python size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="React">
        <React size="50"/>
    </SkillsLogo>
    <SkillsLogo logoName="Tailwind">
        <Tailwind size="50"/>
    </SkillsLogo/>
    <SkillsLogo logoName="Typescript">
        <Typescript size="50"/>
    </SkillsLogo>
</section>